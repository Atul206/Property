<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/card_bg">

    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/property_id"
        android:text="@string/property_id"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icon"/>

    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginRight="20sp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/property_distance"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="20sp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/property_name"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/name"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/icon"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toBottomOf="@id/property_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="20sp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/property_address"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/address"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/icon"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toBottomOf="@id/property_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />




</android.support.constraint.ConstraintLayout>